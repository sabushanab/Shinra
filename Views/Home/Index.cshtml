@{
    ViewData["Title"] = "Hardcore Leaderboard";
}
@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}
<div class="container mt-3 p-4">
    <div class="row">
        <div class="col col-lg-5">
            <div class="form-group">
                <label for="realm">Realm</label>
                <input type="text" class="form-control" id="realm" name="realm" aria-describedby="realm" placeholder="Enter Realm" required>
            </div>
        </div>
        <div class="col col-lg-5">
            <div class="form-group">
                <label for="characterName">Character Name</label>
                <input type="text" class="form-control" id="character-name" name="characterName" placeholder="Enter Character Name" required>
            </div>
        </div>
        <div class="col col-lg-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary align-text-bottom" id="add-character">Add Character</button>
        </div>
        <div class="col col-12">
            <table class="table table-striped table-sm mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Class</th>
                        <th scope="col">Level</th>
                        <th scope="col">Points</th>
                    </tr>
                </thead>
                <tbody id="leaderboard">
                </tbody>
            </table>
        </div>
    </div>
    
</div>
